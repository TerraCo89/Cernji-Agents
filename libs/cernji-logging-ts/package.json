{
  "name": "@cernji/logging",
  "version": "0.1.0",
  "description": "Standardized logging library for Cernji Agents with ECS format and correlation tracking",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": {
        "import": "./dist/index.browser.js",
        "default": "./dist/index.browser.js"
      },
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./context": {
      "types": "./dist/context.d.ts",
      "browser": {
        "import": "./dist/context.browser.js",
        "default": "./dist/context.browser.js"
      },
      "import": "./dist/context.js",
      "default": "./dist/context.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "bun test",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "pino": "^9.5.0",
    "@elastic/ecs-pino-format": "^1.5.0",
    "pino-pretty": "^13.1.2"
  },
  "peerDependencies": {
    "elastic-apm-node": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "elastic-apm-node": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "logging",
    "structured-logging",
    "ecs",
    "elasticsearch",
    "correlation-id",
    "tracing"
  ],
  "author": "Cernji Agents",
  "license": "MIT"
}
